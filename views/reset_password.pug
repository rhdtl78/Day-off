extends layout

block content
  .container
    .row.justify-content-center
      .col-lg-5.col-sm-11
        h1.main-title Rest Password
        form(action="/reset_password/confirm" method="post")
          .form-group
            label(for='name') Name
            input.form-control(type='text', id='name', name='name', placeholder='Your name')
          .form-group
            label(for='email') Email address
            input.form-control(type='email', id='email', name='email', placeholder='Email')
          button.btn.btn-primary(type='submit') Confirm
