.form-group.d-inline-block.col-sm-10.col-lg-5
  label(for="category") Category
  select.form-control(name="category")
    optgroup(label="취미")
      option 게임
      option 공작
      option 노래
      option 독서
      option 기타
    optgroup(label="운동")
      option 자전거
      option 등산
      option 수영
      option 조깅
      option 암벽등반
      option 기타
.form-group.d-inline-block.col-sm-10.col-lg-2
  label(for="isfee")
  .form-check.form-check-inline
    label.form-check-label
      input.form-check-input(type="radio" name="isfee" id="FREE" value="0")
      | 무료
  .form-check.form-check-inline
    label.form-check-label
      input.form-check-input(type="radio" name="isfee" id="CHARGE" value="1")
      | 유료
.form-group.d-inline-block.col-sm-10.col-lg-4#FEE
  label(for="fee") 가격
  .input-group
    input.form-control(type="number", name="fee" min="0.00")
    span.input-group-addon
      .oi.oi-dollar
.form-group
  label(for="title") Title
  input.form-control(type="text", name="title", placeholder="What's your question?", value=event.title)
.form-group
  label(for="location") Location
  input.form-control(type="text", name="location", placeholder="Where's the event hold?", value=event.location)
.form-group
  label(for="content") Description
  textarea.form-control(name="content", rows="5")= event.content
.form-group.d-inline-block.col-sm-10.col-lg-5
  label(for="startOn") Start
  .input-group.input-append.date#startDate
    input.form-control(type='text' name="startOn")
    span.input-group-addon
      span.oi.oi-calendar
.form-group.d-inline-block.col-sm-10.col-lg-5
  label(for="endOn") End
  .input-group.input-append.date#endDate
    input.form-control(type='text' name="endOn")
    span.input-group-addon
      span.oi.oi-calendar
.form-group
  label(for="partyName") The Party's Name
  input.form-control(type="text", name="partyName", placeholder="What is the party's name?", value=event.partyName)
.form-group
  label(for="partyDescription") The Party's Description
  textarea.form-control(name="partyDescription", rows="5")= event.partyDescription
.form-group
  label(for="tags") Tags
  input.form-control(type="text", name="tags", placeholder="tags separated by spaces", value=event.tags ? event.tags.join(" ") : "")
    
script.
  $(function(){
    $("[name=isfee]").click(function(){
      if( $(":input:radio[name=isfee]:checked").val() == 0){
        $('#FEE').hide();
      }else{
        $('#FEE').show();
      }
    });
  });
