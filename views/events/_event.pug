
.content= event.content
.tags.badges
  each tag in event.tags
    span.badge.badge-phill.badge-secondary= tag
    | 
.row
  .col-sm
    .numbers
      div
        a(href=`/events/${event.id}/participants`).
          #[span.number.num-participate= event.numParticipant] Participants,
      div.
        #[span.number.num-answers= event.numAnswers] answers,
      div.
        #[span.number.num-reads= event.numReads] reads
  .col-sm
    .author
      | posted on #{moment(event.createdAt).format('YYYY-MM-DD')}
      if event.author
        br
        | by #[a(href=`/users/${event.author.id}`)= event.author.name] 
